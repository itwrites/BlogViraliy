# ===========================================
# Blog Autopilot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For Replit: Use the Secrets tab instead

# ===========================================
# DATABASE (Required)
# ===========================================
DATABASE_URL=postgresql://neondb_owner:npg_EzeK2A9obNRc@ep-tiny-sea-ahvga6n4.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require

# ===========================================
# SESSION (Required)
# ===========================================
SESSION_SECRET=your-secure-random-string-here

# ===========================================
# OPENAI / AI INTEGRATION (Required for AI features)
# ===========================================
# For Replit: These are auto-configured via AI Integrations
# For self-hosted: Get your API key from https://platform.openai.com
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# ===========================================
# STRIPE PAYMENTS (Required for subscriptions)
# ===========================================
# Get keys from https://dashboard.stripe.com/apikeys

# Production Keys (used when STRIPE_TEST_MODE is not 'true')
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Test Keys (used when STRIPE_TEST_MODE='true')
STRIPE_SECRET_KEY_TEST=sk_test_...
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_...
STRIPE_WEBHOOK_SECRET_TEST=whsec_...

# Set to 'true' to use test keys, 'false' or omit for production
STRIPE_TEST_MODE=true

# ===========================================
# PEXELS (Optional - for stock images)
# ===========================================
# Get your API key from https://www.pexels.com/api/
PEXELS_API_KEY=

# ===========================================
# FIRECRAWL (Optional - for website scraping in onboarding)
# ===========================================
# Get your API key from https://firecrawl.dev/
FIRECRAWL_API_KEY=

# ===========================================
# PROXY MODE (Optional - for reverse proxy deployments)
# ===========================================
# Comma-separated list of trusted proxy hostnames
TRUSTED_PROXY_HOSTS=

# Secret for X-BV-Visitor-Host header validation
PROXY_SECRET=

# Override admin domain (defaults to localhost)
ADMIN_DOMAIN=

# ===========================================
# SERVER (Optional)
# ===========================================
# Server port (defaults to 5000)
PORT=5000

# Node environment
NODE_ENV=development
